<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="168dp"
        android:layout_height="120dp"
        android:layout_marginStart="139dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="144dp"
        android:onClick="RadioButton1"
        android:src="@drawable/apple"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/apple"
        />

    <RadioGroup
        android:layout_width="304dp"
        android:layout_height="241dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="304dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:checked="true"
            android:onClick="RadioButton1"
            android:text="Яблоко" />

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:onClick="RadioButton1"
            android:text="Груша" />

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:onClick="RadioButton1"
            android:text="Виноград" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="94dp"
        android:layout_height="48dp"
        android:layout_marginStart="18dp"
        android:onClick="Images"
        android:text="Яблоко"
        app:layout_constraintBottom_toTopOf="@+id/checkBox2"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="94dp"
        android:layout_height="48dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="3dp"
        android:onClick="Images"
        android:text="Груша"
        app:layout_constraintBottom_toTopOf="@+id/checkBox3"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="128dp"
        android:onClick="Images"
        android:text="Виноград"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="212dp"
        android:src="@drawable/apple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@drawable/apple"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="91dp"
        android:layout_height="91dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@drawable/grusha"
        android:src="@drawable/grusha"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="92dp"
        android:layout_height="95dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@drawable/vinograde"
        android:src="@drawable/vinograde"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>